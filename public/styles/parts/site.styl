.site
		&-header
			position relative
			z-index 100
			background $c-main
			height $headerHeight
			line-height $headerHeight
			padding 0 10px
			box-shadow 0 1px 0 0 rgba(0,0,0,0.1)


		&-logo
			color rgba(#000, 0.5)
			font-weight bold
			font-size 22px
			text-transform uppercase
			letter-spacing 2px
			text-decoration none

			&:hover, &:active, &:visited
				color @color
				text-decoration none

			i
				font-style normal
				//color #040004